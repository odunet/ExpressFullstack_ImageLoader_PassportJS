<div class="container">
    {{> header}}
    <section class="card" id="landing">
        <h2>
            Welcome to the Express Image Loader
        </h2>
        <h3>
            ver 1.1.0
        </h3>
        <form action="loader/../auth/register" method="POST" class="showcase-form" enctype="multipart/form-data">
            <fieldset>
                <legend>Register.</legend>
                <div class="form-control" id="imageField">
                    <img src="../image/avatar.png" alt="Upload Image" id="avatar">
                    <input type="file" id="file" accept="image/*" name="photo">
                </div>
                <div class="form-control">
                    <input type="text" name="firstName" placeholder="Firstname" id="fst">
                </div>
                <div class="form-control">
                    <input type="text" name="lastName" placeholder="Lastname" id="lst">
                </div>
                <div class="form-control">
                    <input type="text" name="userName" placeholder="Username" id="usr">
                </div>
                <div class="form-control">
                    <input type="email" name="email" placeholder="Email" id="eml">
                </div>
                <div class="form-control">
                    <input type="password" name="password" placeholder="Password" id="pwd">
                </div>
                <div class="form-control">
                    <input type="checkbox" name="isAdmin" value='true' placeholder=id="isAdmin">
                    <label for="isAdmin">isAdmin</label>
                </div>
                <input type="hidden" id='csrf' name="_csrf" value={{ csrfToken }}>
                <input type="submit" name="submit" value="submit" class="btn" id="submitRegister">
            </fieldset>
        </form>
    </section>
</div>